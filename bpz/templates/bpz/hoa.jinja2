{% extends "bpz/base.jinja2" %}

{% block content %}
	<div class="container">
		
		<div class="row row-buffer">
			
  		<div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1">
  			<div class="panel panel-default">
    			<div class="panel-heading">
						<h3 class="panel-title">Home Owners Associations</h3>
					</div>
					
					<div class="scroll-area" data-spy="scroll" >
    				<ul id="case-list" class="list-group"></ul>
				</div>
			</div>
			
		</div>
		
	</div>
{% endblock content %}

{% block body_js -%}
  <script>
  $(document).ready(function () {
        bpz.activateMap()  
        bpz.api.hoa().done(function (data) {
          bpz.updateMap(data)
          bpz.lists.build ("#case-list",data)
          bpz.lists.append.hoa("#case-list")
        }) //end get data
    })//end doc ready
  </script>
{%- endblock body_js %}  
  



